<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.debug.DebugFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/debug_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debug_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Debug Info"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/debug_build_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Build Type: %s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/debug_version_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Build Type: %s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/debug_application_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application ID: %s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/debug_version_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version Code: %s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/debug_git_hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Git Commit: %s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/debug_build_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Build Timestamp: %s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>